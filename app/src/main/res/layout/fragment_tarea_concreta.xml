<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.TareaConcretaFragment">

    <TextView
        android:id="@+id/nombreTarea"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="40dp"
        android:text="Limpieza de botellÃ³n"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/descripcionTarea"
        android:layout_width="264dp"
        android:layout_height="145dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bordesedittext"
        android:inputType="textMultiLine"
        android:text="Botellon en el paseo del cauce a la altura del ambulatorio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descTarResp" />


    <TextView
        android:id="@+id/calleTarea"
        android:layout_width="264dp"
        android:layout_height="34dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="44dp"
        android:text="Paseo del cauce 58"
        app:layout_constraintBottom_toTopOf="@+id/textView14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/distritoTarea"
        android:layout_width="230dp"
        android:layout_height="35dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="10dp"
        android:text="Pilarica"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />


    <TextView
        android:id="@+id/descTarResp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="30dp"
        android:text="Descripcion de la tarea"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombreTarea" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="30dp"
        android:text="Calle"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descripcionTarea" />

    <Button
        android:id="@+id/botonTratarTarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="130dp"
        android:backgroundTint="#5462b0"
        android:text="Tratar Tarea"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/distritoTarea" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="30dp"
        android:text="Distrito"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calleTarea" />


</androidx.constraintlayout.widget.ConstraintLayout>