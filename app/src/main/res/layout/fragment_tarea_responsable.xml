<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.TareaResponsableFragment">

    <Button
        android:id="@+id/botonCompletadoTarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#5462b0"
        android:text="Marcar tarea como completa"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapViewResp"
        android:layout_width="216dp"
        android:layout_height="110dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombreCalleResp" />

    <TextView
        android:id="@+id/nombreCalleResp"
        android:layout_width="170dp"
        android:layout_height="22dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="25dp"
        android:text="Nombre calle"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/mapViewResp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/descripcionResp"
        android:layout_width="246dp"
        android:layout_height="82dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bordesedittext"
        android:inputType="textMultiLine"
        android:text="Descripcion de lo que ocurre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="30dp"
        android:text="Descripcion de la tarea"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mapViewResp" />

    <TextView
        android:id="@+id/solucionResp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="30dp"
        android:text="Describa la solucion tomada"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descripcionResp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="247dp"
        android:layout_height="79dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="15dp"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/solucionResp" />



</androidx.constraintlayout.widget.ConstraintLayout>